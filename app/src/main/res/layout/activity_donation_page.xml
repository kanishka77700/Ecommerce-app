<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/maingradientcolorbackground"
    android:elevation="3dp"
    tools:context=".DonationPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backnew"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:id="@+id/back"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:elevation="6dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mainicon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Street Mall Fund Camp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate to PM Cares Fund"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="23sp"/>



<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Donate"
    android:layout_marginTop="30dp"
    android:id="@+id/donatebutton"
    android:textSize="15sp"
    android:textColor="@color/white"
    android:background="@drawable/newbutton"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:padding="8dp"
    android:elevation="6dp"/>

</LinearLayout>




</LinearLayout>